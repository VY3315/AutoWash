@model AutoWash.Models.EF.tbl_premiumcleaning

@{
    ViewBag.Title = "PremiumCleaning";
}

<head>
    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Premium Cleaning</h1>
            </div>
            <!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/AWAdmin/Dashboard/Index">Home</a></li>
                    <li class="breadcrumb-item active">PremiumCleaning</li>
                </ol>
            </div>
            <!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
@*<h1 style="padding:20px 20px 0px 20px;">Premium Cleaning</h1>*@

<form action="PremiumCleaning" method="post" style="padding: 20px 20px 0px 20px;">

    @if (Model != null && Model.pid > 0)
    {
        <div class="form-group row" hidden>
            <label for="pid" class="col-sm-2 col-form-label">id</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="pid" value="@Model.pid" name="pid">
            </div>
        </div>
        <div class="form-group row">
            <label for="pplan" class="col-sm-2 col-form-label">Plan</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="pplan" name="pplan" value="Premium Cleaning">
            </div>
        </div>
        <div class="form-group row">
            <label for="pprice" class="col-sm-2 col-form-label">Plan Price</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="pprice" name="pprice" value="@Model.pprice.Trim()" placeholder="Price">
            </div>
        </div>



        @*@Html.Partial("_AddService")*@


        <br />


        <div class="form-group row" style="padding:0px">
            <div class="form-group row">
                <div class="col-sm-2">All Services</div>
                <div class="col-sm-10">

                    <div class="form-check">

                        @if (Model.pservices != null)

                        {
                            foreach (string str in ViewBag.pservices)
                            {
                                var selectedService = Model.pservices.Split(',');
                                bool isselected = false;
                                foreach (var selected in selectedService)
                                {
                                    if (selected.ToString().Trim() == str)
                                    {
                                        isselected = true;
                                    }
                                }
                                if (isselected)
                                {
                                    <input class="form-check-input" type="checkbox" id="psr" name="psr" value="@str" checked />
                                    <label class="form-check-label" for="pservices">
                                        @str
                                    </label><br />
                                }
                                else
                                {
                                    <input class="form-check-input" type="checkbox" id="psr" name="psr" value="@str" />
                                    <label class="form-check-label" for="pservices">
                                        @str
                                    </label><br />
                                }
                            }
                        }
                        else
                        {
                            foreach (string str in ViewBag.pservices)
                            {

                                <input class="form-check-input" type="checkbox" id="psr" name="psr" value="@str">
                                <label class="form-check-label" for="pservices">
                                    @str
                                </label><br />

                            }
                        }

                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-info">Update</button>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="form-group row">
            <label for="pplan" class="col-sm-2 col-form-label">Plan</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="pplan" name="pplan" value="Premium Cleaning">
            </div>
        </div>
        <div class="form-group row">
            <label for="pprice" class="col-sm-2 col-form-label">Plan Price</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="pprice" name="pprice" placeholder="Price">
            </div>
        </div>

        @*@Html.Partial("_AddService")*@
        <br />
        <div class="form-group row" style="padding:0px">
            <div class="form-group row">
                <div class="col-sm-2">All Services</div>
                <div class="col-sm-10">


                    <div class="form-check">

                        @foreach (string str in ViewBag.pservices)
                        {

                            <input class="form-check-input" type="checkbox" id="psr" name="psr" value="@str">
                            <label class="form-check-label" for="pservices">
                                @str
                            </label><br />

                        }
                        @foreach (var item in ViewBag.ServiceList)
                        {
                            <input class="form-check-input" type="checkbox" id="psr" name="psr" value="@item.sname">
                            <label class="form-check-label" for="pservices">
                                @item.sname
                            </label><span>&nbsp;&nbsp;&nbsp;<a href="RemoveServices/@item.sid">Remove</a></span><br />
                        }
                    </div>
                </div>

            </div>



            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-info">Submit</button>
                </div>
            </div>


        </div>
    }
</form>

<form action="Services" method="post" style="padding: 0px 20px 0px 20px;">
    @if (Model.pid == 0)
    {
        <!-- Button trigger modal -->
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Add Service
                </button>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add Service</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">


                        <div class="form-group row">
                            <label for="sname" class="col-sm-2 col-form-label">Service</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="sname" name="sname" placeholder="Please Enter Service Name">
                            </div>


                        </div>

                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>

                </div>
            </div>
        </div>
    }

</form>

@if (Model.pid == 0)
{
    <h1 style="padding-left:20px">Status</h1>
    <br />
    <table class="table table-hover">
        <tr>
            <td>Plan</td>
            <td>Price</td>
            <td>All Services</td>
            <td>Action</td>
        </tr>

        @foreach (var item in ViewBag.primeCleantable)
        {
            <tr>
                <td>@item.pplan</td>
                <td>@item.pprice</td>
                <td>@item.pservices</td>
                <td>
                    <span style="font-size:19px; align-content:center;"><a href="PremiumCleaning/@item.pid">Edit</a></span>&nbsp;&nbsp;
                    <span style="font-size: 19px;align-content:center;"><a href="DeletePremiumCleaning/@item.pid">Delete</a></span>&nbsp;&nbsp;

                </td>

            </tr>
        }
    </table>
}



