@model AutoWash.Models.EF.tbl_TeamMemberDetails
@{
    ViewBag.Title = "AddEditTeamMembersDetails";
}

@*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">TeamMember Detail</h1>
            </div>
            <!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/AWAdmin/Dashboard/Index">Home</a></li>
                    <li class="breadcrumb-item active">TeamMemberDetail</li>
                </ol>
            </div>
            <!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->


<form action="AddEditTeamMembersDetails" method="post" enctype="multipart/form-data" style="padding: 20px 20px 0px 20px;">

    @if (Model != null && Model.TMid > 0)
    {
        <input type="text" class="form-control" id="TMid" name="TMid" placeholder="Pls Enter Washing Point Subject" value="@Model.TMid" hidden>

        <div class="form-group row">
            <label for="TMname" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="TMname" name="TMname" placeholder="Pls Enter Team Member Name" value="@Model.TMname" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="TMprofession" class="col-sm-2 col-form-label">Profession</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="TMprofession" name="TMprofession" placeholder="Pls Enter Team Member Profession" value="@Model.TMprofession" required>
            </div>
        </div>

        <div class="form-group row">
            <label for="TMphoto_ufile" class="col-sm-2 col-form-label">Team Member Image</label>
            <div class="col-sm-10">
                <input type="hidden" name="SLimg" value="@Model.TMphoto" />
                <img src="@Url.Content(Model.TMphoto)" alt="@Model.TMphoto" hight="300" width="300" />
                <input type="file" class="form-button" id="TMphoto_ufile" name="TMphoto_ufile" value="@Model.TMphoto" required>
            </div>
        </div>

        <br />
        <div class="form-group row" style="padding:0px">
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-info">Update</button>
                </div>
            </div>


        </div>
    }
    else
    {
        <div class="form-group row">
            <label for="TMname" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="TMname" name="TMname" placeholder="Pls Enter Team Member Name" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="TMprofession" class="col-sm-2 col-form-label">Profession</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="TMprofession" name="TMprofession" placeholder="Pls Enter Team Member Profession" required>
            </div>
        </div>

        <div class="form-group row">
            <label for="TMphoto_ufile" class="col-sm-2 col-form-label">Team Member Image</label>
            <div class="col-sm-10">
                <input type="file" class="form-button" id="TMphoto_ufile" name="TMphoto_ufile" required>
            </div>
        </div>

        <div class="content-header">
            <div @*class="container-fluid"*@>
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-info">Submit</button>

                    </div>
                    <div class="col-sm-6 text-right">
                        <!-- Right side content -->
                        <a href="~/AWAdmin/ManageAboutUsDetails/ViewAllDetails" class="btn btn-success">View List</a>
                    </div>
                </div><!-- /.row -->
                <!-- Left side content -->
                <!-- Place your content here that you want to align to the left -->

            </div><!-- /.container-fluid -->
        </div>
    }
</form>

