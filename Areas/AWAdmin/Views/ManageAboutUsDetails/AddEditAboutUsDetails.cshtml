@model AutoWash.Models.EF.tbl_AboutUsDetails
@{
    ViewBag.Title = "AddEditAboutUsDetails";
}

@*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">AboutUs Detail</h1>
            </div>
            <!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/AWAdmin/Dashboard/Index">Home</a></li>
                    <li class="breadcrumb-item active">AboutUsDetail</li>
                </ol>
            </div>
            <!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->


<form action="AddEditAboutUsDetails" method="post" enctype="multipart/form-data" style="padding: 20px 20px 0px 20px;">

    @if (Model != null && Model.AUid > 0)
    {
        <div class="form-group row">
            <label for="AUsubject" class="col-sm-2 col-form-label">Subject</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="AUsubject" name="AUsubject" placeholder="Pls Enter Subject Name" value="@Model.AUsubject" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="AUdescription" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="AUdescription" name="AUdescription" placeholder="Pls Enter Subject Description" value="@Model.AUdescription" required>
            </div>
        </div>

        <div class="form-group row">
            <label for="AUphotos" class="col-sm-2 col-form-label">Subject Image</label>
            <div class="col-sm-10">
                <input type="hidden" name="SLimg" value="@Model.AUphoto" />
                <img src="@Url.Content(Model.AUphoto)" alt="@Model.AUphoto" hight="300" width="300" />
                <input type="file" class="form-button" id="AUphotos" name="AUphotos" value="@Model.AUphoto" required>
            </div>
        </div>

        <br />
        <div class="form-group row" style="padding:0px">
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-info">Update</button>
                </div>
            </div>


        </div>
    }
    else
    {
        <div class="form-group row">
            <label for="AUsubject" class="col-sm-2 col-form-label">Subject</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="AUsubject" name="AUsubject" placeholder="Pls Enter Subject Name" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="AUdescription" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="AUdescription" name="AUdescription" placeholder="Pls Enter Subject Description" required>
            </div>
        </div>

        <div class="form-group row">
            <label for="AUphoto_ufile" class="col-sm-2 col-form-label">Subject Image</label>
            <div class="col-sm-10">
                <input type="file" class="form-button" id="AUphoto_ufile" name="AUphoto_ufile" required>
            </div>
        </div>

        <div class="content-header">
            <div @*class="container-fluid"*@>
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-info">Submit</button>

                    </div>
                    <div class="col-sm-6 text-right">
                        <!-- Right side content -->
                        <a href="~/AWAdmin/ManageAboutUsDetails/ViewAllDetails" class="btn btn-success">View List</a>
                    </div>
                </div><!-- /.row -->
                <!-- Left side content -->
                <!-- Place your content here that you want to align to the left -->

            </div><!-- /.container-fluid -->
        </div>
    }
</form>

